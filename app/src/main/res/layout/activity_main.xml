<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".view.MainActivity">

    <!-- Main calculator layout -->

    <!-- The parent layout for calculator screen and buttons -->
    <LinearLayout
        android:id="@+id/calculatorLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">

        <!-- Layout for displaying expressions and results -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="@drawable/textview_background">

            <TextView
                android:id="@+id/btExpression"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColor="@color/black"
                android:gravity="end|center_vertical"
                android:ellipsize="start"
                android:padding="10dp"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btResult"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Layout for calculator buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp">

            <!-- First row of buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/btClear"
                    style="@style/ActionButtonStyle2"
                    android:text="CLEAR"/>

                <TextView
                    android:id="@+id/btHistory"
                    style="@style/ActionButtonStyle2"
                    android:text="HIST"/>

                <TextView
                    android:id="@+id/btBrackets"
                    style="@style/ActionButtonStyle"
                    android:text="()"/>

                <TextView
                    android:id="@+id/btPercent"
                    style="@style/ActionButtonStyle"
                    android:text="%"/>

                <TextView
                    android:id="@+id/btDivide"
                    style="@style/ActionButtonStyle"
                    android:text="รท"/>
            </LinearLayout>

            <!-- Second row of buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/btSeven"
                    style="@style/NumberButtonStyle"
                    android:text="7"/>

                <TextView
                    android:id="@+id/btEight"
                    style="@style/NumberButtonStyle"
                    android:text="8"/>

                <TextView
                    android:id="@+id/btNine"
                    style="@style/NumberButtonStyle"
                    android:text="9"/>

                <TextView
                    android:id="@+id/btMul"
                    style="@style/ActionButtonStyle"
                    android:text="ร"/>
            </LinearLayout>

            <!-- Third row of buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/btFour"
                    style="@style/NumberButtonStyle"
                    android:text="4"/>

                <TextView
                    android:id="@+id/btFive"
                    style="@style/NumberButtonStyle"
                    android:text="5" />

                <TextView
                    android:id="@+id/btSix"
                    style="@style/NumberButtonStyle"
                    android:text="6"/>

                <TextView
                    android:id="@+id/btMinus"
                    style="@style/ActionButtonStyle"
                    android:text="-"/>
            </LinearLayout>

            <!-- Fourth row of buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/btOne"
                    style="@style/NumberButtonStyle"
                    android:text="1"/>

                <TextView
                    android:id="@+id/btTwo"
                    style="@style/NumberButtonStyle"
                    android:text="2"/>

                <TextView
                    android:id="@+id/btThree"
                    style="@style/NumberButtonStyle"
                    android:text="3"/>

                <TextView
                    android:id="@+id/btPlus"
                    style="@style/ActionButtonStyle"
                    android:text="+"/>
            </LinearLayout>

            <!-- Fifth row of buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btZero"
                    style="@style/NumberButtonStyle"
                    android:text="0"/>

                <TextView
                    android:id="@+id/btDot"
                    style="@style/NumberButtonStyle"
                    android:text="."/>

                <TextView
                    android:id="@+id/btDel"
                    style="@style/ActionButtonStyle2"
                    android:text="DEL"/>

                <TextView
                    android:id="@+id/btEquals"
                    style="@style/ActionButtonStyle"
                    android:text="="/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- RecyclerView for History -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
