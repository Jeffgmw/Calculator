<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style for operation buttons such as "*", "-", "+". -->
    <style name="ActionButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#30970E</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <!-- Style for action buttons such as "CLEAR" and "DEL". -->
    <style name="ActionButtonStyle2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#880C0C</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <!-- Style for number buttons as "1, 2, 3, 4, 5, 6, 7, 8, 9, 0". -->
    <style name="NumberButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>